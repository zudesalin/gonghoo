<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
    <LinearLayout
            android:id="@+id/popWindow_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:layout_marginBottom="52dp"
            android:orientation="horizontal">
            <TextView
                    android:id="@+id/jh_detail_ticket_type"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:textIsSelectable="false"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                    android:layout_weight="0.8"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/jh_detail_ticket_price"
                            android:text="0å…ƒ"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:textColor="#FF6633"
                            android:textSize="13sp"
                            android:textIsSelectable="false"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/jh_detail_ticket_left"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:textIsSelectable="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
            </LinearLayout>
        <LinearLayout
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:background="@drawable/jianghu_ticket_bg"
                android:layout_height="wrap_content">
            <ImageButton
                    android:layout_width="20dp"
                    android:id="@+id/ticket_payjian"
                    android:background="@android:color/transparent"
                    android:src="@drawable/payjian"
                    android:layout_gravity="center"
                    android:layout_height="20dp"/>
            <TextView
                    android:layout_width="50dp"
                    android:id="@+id/ticket_num"
                    android:textColor="@android:color/black"
                    android:text="0"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content"/>
            <ImageButton
                    android:id="@+id/ticket_payjia"
                    android:layout_width="20dp"
                    android:src="@drawable/payjia"
                    android:background="@android:color/transparent"
                    android:layout_height="20dp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>