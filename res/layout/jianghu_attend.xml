<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="#F4F4F4"
              android:layout_height="match_parent">
    <ScrollView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                android:background="@drawable/shape"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginTop="25dp"
                android:layout_height="wrap_content">
                <TextView
                        android:layout_marginTop="15dp"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:text="支付测试"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/time_icon"/>
                <TextView
                        android:layout_marginLeft="3dp"
                        android:textColor="#777777"
                        android:text="2016年06月13日  13:44 - 2017年08月02日  13:44"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/place_icon"/>
                <TextView
                        android:textColor="#777777"
                        android:layout_marginLeft="3dp"
                        android:text="123"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
                <com.gonghoo.view.ListViewFroScrollView
                    android:background="@android:color/transparent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/jianghu_attend_tickets_listView"
                    android:layout_marginLeft="15dp"
                    android:divider="#EEEEEE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
            </com.gonghoo.view.ListViewFroScrollView>
                <LinearLayout
                        android:layout_marginLeft="30dp"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                    <TextView
                            android:textColor="#777777"
                            android:layout_gravity="center"
                            android:text="票价："
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:textColor="#FF845B"
                            android:layout_weight="2"
                            android:text="￥36"
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    <Button
                            android:layout_weight="0.76"
                            android:background="@drawable/jianghu_attend_changeticket"
                            android:layout_gravity="right|center_vertical"
                            android:text="修改订单"
                            android:textColor="@android:color/black"
                            android:layout_width="0dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="3dp"
                            android:layout_marginTop="3dp"
                            android:layout_height="30dp"/>
                </LinearLayout>
        </LinearLayout>
            <!--是否需要优惠券-->
            <LinearLayout
                    android:background="@drawable/shape"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#333333"
                        android:text="是否使用优惠券"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                <ImageView
                        android:layout_gravity="right|center_vertical"
                        android:src="@drawable/nousr_coupon_icon"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <!--是否需要发票-->
            <LinearLayout
                    android:background="@drawable/shape"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#333333"
                        android:text="是否需要发票"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:textColor="#FF6633"
                        android:layout_gravity="left|center_vertical"
                        android:paddingLeft="5dp"
                        android:text="税点8"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                <ImageView
                        android:layout_gravity="right|center_vertical"
                        android:src="@drawable/nousr_coupon_icon"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
            <ImageView
                    android:src="@drawable/jianghu_attend_gpxx"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            <TextView
                    android:layout_marginLeft="5dp"
                    android:textColor="#FF6633"
                    android:text="购票人信息确认"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/shape"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#777777"
                    android:text="姓名:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#777777"
                    android:text="手机:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#777777"
                    android:text="单位:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#777777"
                    android:text="职务:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#777777"
                    android:text="邮箱:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_marginLeft="5dp"
                        android:textColor="#777777"
                        android:text="票价：￥35"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="#777777"
                        android:text="优惠：￥35"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="#D5D5D5" />
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:gravity="right"
                    android:layout_height="wrap_content">
                <TextView
                        android:textSize="18sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="#FF6633"
                        android:text="共计："
                        android:layout_gravity="right|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:textSize="18sp"
                        android:layout_marginRight="15dp"
                        android:textColor="#FF6633"
                        android:text="35"
                        android:layout_gravity="right|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <Button
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:layout_marginTop="20dp"
                    android:background="#FF6633"
                    android:text="确认支付"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_height="40dp"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>